{% extends "admin/layout.html.twig" %}
{% block content %}

    <div>
        <h2>لطفا فرم زیر را پر کنید :</h2>
        <form method="POST" action="" enctype="multipart/form-data">
            <label>نام محصول :    <input type="text" placeholder="نام محصول را وارد کنید" name="name"></label><br><br>
            <label>قیمت :<input type="text"  placeholder="قیمت را وارد کنید" name="price"></label><br><br>
            <label>تعداد: <input type="number"  placeholder="تعداد را وارد کنید" name="count"></label><br><br>
            <label>شماره سریال: <input type="text"placeholder="شماره سریال را وارد کنید" name="serialnumber"></label><br><br>
            <label>توضیحات: <textarea rows="5"name="describe"></textarea></label><br><br>          
            <label>دسته:
                <select name="category_name">
                    {% for c in categories %}
                        <option>{{c.name}}</option>
                    {% endfor %}   
                </select>
            </label><br><br>
            <label>آپلود عکس :<input type="file" name="picture"></label> <br><br>   
            <input type="submit" value="افزودن" >
        </form>
    </div>
{% endblock %}   