{% extends "admin/layout.html.twig" %}
{% block content %}


    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Count</th>
            <th>Describtion</th>
            <th>Status</th>
            <th>Edite</th>
            <th>Delete</th>
            <th>Picture</th>
        </tr>
        {% for p in products %}
            <tr>
                <td>{{loop.index}}</td>
                <td><a href="{{path}}/admin/products/view.php?id={{p.id}}">{{p.name}}</a></td>
                <td>{{p.price}}</td>
                <td>{{p.quantity}}</td>
                <td>{{p.describtion}}</td>
                <td>{{p.status}}</td>
                <td><a href="edite.php?id={{p.id}}"><span class="glyphicon glyphicon-edit"></a></span></td>
                <td><a href="delete.php?id={{p.id}}"><span class="glyphicon glyphicon-trash"></a></span></td>
                <td>
                    <img src="{{path}}/product_images/{{p.picname}}"  class="img-thumbnail"  width="150" height="130">
                </td>
            </tr>
        {% endfor %}   
    </table> 
{% endblock %}  